{% extends 'back_office/index.html.twig' %}

{% block title %}Hello AdminSaisonController!{% endblock %}

{% block h1 %}Administrer les Saisons{% endblock %}

{% block child %}
    <section id="saisons">
        <div class="ml-auto text-right my-3">
            <a href="" class="btn btn-primary"><i class="fas fa-plus-square"></i>&nbsp;&nbsp;Créer une nouvelle saison</a>
        </div>

        <table class="w-100">

            <tr class="bg-dark text-light">
                <th class="p-2">Image</th>
                <th class="p-2" colspan="3">Titre</th>
                <th class="p-2">Actions</th>
            </tr>

            {% for une_saison in saisons %}

                <tr>
                    <td class="p-2" colspan="5"></td>
                </tr>
                <tr>
                    <td class="p-2 border text-center bg-light" rowspan="3">
                        <img class="img-fluid img-540" src="{{ asset(une_saison.image) }}" alt="Image d'une Saison" />
                    </td>
                    <td class="p-2 border text-center" colspan="3" rowspan="2"><strong>{{ une_saison.titre }}</strong></td>
                    <td class="p-2 border text-center">
                        <a href="{{ path('aventure_saison', { numero: une_saison.numero }) }}"><i class="fas fa-eye"></i></a>
                    </td>
                </tr>
                <tr>
                    <td class="p-2 border text-center"><a href=""><i class="fas fa-edit"></i></a></td>
                </tr>
                <tr>
                    <td class="p-2 border text-center"><strong>ID :</strong><br/>{{ une_saison.id }}</td>
                    <td class="p-2 border text-center"><strong>N° :</strong><br/>{{ une_saison.numero }}</td>
                    <td class="p-2 border text-center"><strong>Couleur :</strong><br/>{{ une_saison.couleur }}</td>
                    <td class="p-2 border text-center">
                        <a href="" onclick="return confirm('Êtes-vous sûr de vouloir supprimer la saison : {{ une_saison.titre }} ?')">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>

            {% else %}

                <tr>
                    <td class="p-2" colspan="5"></td>
                </tr>
                <tr>
                    <td colspan="5">Désolé ! Il n'y a pas encore de Saison !</td>
                </tr>

            {% endfor %}

        </table>
    </section>
{% endblock %}
