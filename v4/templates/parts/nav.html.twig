{% if is_granted('ROLE_ADMIN') %}
    <div class="container-fluid bg-secondary text-right">
        <a href="{{ path('back_office') }}" class="lien-blanc"><i class="fas fa-tools"></i>&nbsp;&nbsp;Panneau d'Administration</a>
    </div>
 {% endif %}

<div id="barre-navigation" class="container-fluid bg-dark">

    <div class="container">

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark bg-primary">
        
            <div id="logo"><a class="navbar-brand" href="{{ path('aventure') }}"><img src="{{ asset('assets/img/logo-axl.png') }}" alt="Logo AXL" class="img-fluid" /></a></div>

            <button class="navbar-toggler btn-primary" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav"
            aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <div class="d-flex justify-content-between align-items-center w-100">

                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link lien-gris {% if app.request.get('_route') == 'aventure_saison'
                                                            or app.request.get('_route') == 'aventure_episode' %} active{% endif %}"
                               href="{{ path('aventure') }}">AVENTURE</a></li>
                        <li class="nav-item">
                            <a class="nav-link lien-gris {% if app.request.get('_route') == 'personnages'
                                                            or app.request.get('_route') == 'personnage_profil' %}active{% endif %}"
                               href="{{ path('personnages') }}">PERSONNAGES</a></li>
                        <li class="nav-item">
                            <a class="nav-link lien-gris {% if app.request.get('_route') == 'empire'
                                                            or app.request.get('_route') == 'empire_clan'
                                                            or app.request.get('_route') == 'empire_lieu'
                                                            or app.request.get('_route') == 'empire_archive' %}active{% endif %}"
                               href="{{ path('empire')}}">EMPIRE</a></li>
                        <li class="nav-item">
                            <a class="nav-link lien-gris {% if app.request.get('_route') == 'regles'
                                                            or app.request.get('_route') == 'regles_classe'
                                                            or app.request.get('_route') == 'regles_ecole' %}active{% endif %}"
                               href="{{ path('regles')}}">REGLES</a></li>
                    </ul>
                    {% if app.user %}
                        <div class="connecte">
                            <strong>{{ app.user.pseudo }}</strong><br/>
                            <a class="lien-gris" href=""><i class="fas fa-torii-gate couleur-primaire"></i>&nbsp;&nbsp;MON COMPTE</a><br/>
                            <small><a class="lien-gris" href="{{ path('app_logout') }}">Se Déconnecter</a></small>
                        </div>
                    {% else %}
                        <div>
                            {# <a href="{{ path('app_login') }}" class="btn btn-primary nav-item" >Se Connecter</a> #}
                            {# <a class="lien-gris" href="{{ path('app_register') }}"><i class="fas fa-torii-gate couleur-primaire"></i>&nbsp;&nbsp;MON COMPTE</a><br/>
                                <small><a class="lien-gris" href="{{ path('app_logout') }}">Se Déconnecter</a></small> #}
                            <button type="button" class="btn btn-primary nav-item" data-toggle="modal" data-target="#connexion">Se Connecter</button>
                        </div>
                    {% endif %}

                </div>
            </div>
            
        </nav>
        
    </div>

</div>